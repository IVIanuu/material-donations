<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="72dp"
    android:background="?selectableItemBackground"
    android:orientation="horizontal"
    android:paddingStart="24dp"
    android:paddingLeft="24dp"
    android:paddingTop="8dp"
    android:paddingEnd="24dp"
    android:paddingRight="24dp"
    android:paddingBottom="8dp"
    tools:ignore="PrivateResource">

    <TextView
        android:id="@+id/donation_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textAppearance="?textAppearanceSubtitle1"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@id/donation_desc"
        app:layout_constraintEnd_toStartOf="@id/donation_price"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:ellipsize="end"
        tools:text="Beer" />

    <TextView
        android:id="@+id/donation_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceBody1"
        android:textColor="?android:textColorSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/donation_title"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/donation_title"
        app:layout_constraintTop_toBottomOf="@id/donation_title"
        tools:text="Beer is awesome slenfjlgesnlsneglnelgeslkgmklsemklsemklemklmsgmklgmgklsemkl gs kl sklk gskl glk sgkel skleg ls eg lekg" />

    <TextView
        android:id="@+id/donation_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:maxLines="1"
        android:textAppearance="?textAppearanceBody2"
        android:textColor="?android:textColorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="3,14" />

</androidx.constraintlayout.widget.ConstraintLayout>